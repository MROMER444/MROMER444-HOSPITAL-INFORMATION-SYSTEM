// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
}

enum Role {
  Physician
  Diagnostic
  Pharmacy
  Inventory
  Reception
}

model Patient {
  id               Int      @id @default(autoincrement())
  name             String
  number           String
  address          String
  birthDate        DateTime
  emergencycontact String
  gender           Gender
  image            String?
  Queue            Ticket[]
}

model Ticket {
  id        Int      @id @default(autoincrement())
  patient   Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  patientId Int
  dateTime  DateTime
}

model Staff {
  id        Int      @id @default(autoincrement())
  name      String
  role      Role
  address   String
  birthDate DateTime
  number    String
  gender    Gender
  password String @default("pass")
}

model Diagnostic {
  id       Int    @id @default(autoincrement())
  division String
  type     String
  name     String
  room     String
}

model Inventory {
  id       Int    @id @default(autoincrement())
  type     String
  name     String
  unit     String
  quantity Int
  price    Float
  total    Int
  code     String
}

model Pharmacy {
  id       Int    @id @default(autoincrement())
  type     String
  name     String
  unit     String
  quantity String
  code     String
}
